<?php

require_once("modelo/Iformageometrica.php");

class quadrado implements interfacegeometrico{
    private $lado;

    public function GetArea(){
        $areaquadrado = $this->lado * $this->lado;
        echo"\na area do quuadrado é: $areaquadrado";
    }
    public function GetDesenho(){
        $desenhoquadrado =
        "\n\n┌──────────────────────────────────────────────────┐
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
       │                                                  │
